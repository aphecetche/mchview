{
  "name": "mchview-dev",
  "version": "1.0.0",
  "private": true,
  "license": "ISC",
  "scripts": {
    "postinstall": "run-p install:api install:app",
    "install:api": "cd api && npm install",
    "install:app": "cd app && npm install",
    "start": "run -p start:api start:app",
    "start:api": "npm run start --prefix api",
    "start:app": "npm run start --prefix app",
    "build": "run-p build:api build:app",
    "build:api": "cd api && npm run build && cd..",
    "build:app": "cd app && npm run build && cd..",
    "prestart:docker": "npm run build",
    "start:docker": "docker-compose -f docker/docker-compose.yml up -d --build",
    "poststart:docker": "open-cli http://localhost:8000/",
    "stop:docker": "docker-compose -f docker/docker-compose.yml down"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1"
  }
}
